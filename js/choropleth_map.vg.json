{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A choropleth map for displaying the death rate in each country around the world in 2019.",
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "labelFont": "monospace",
      "titleFont": "monospace",
      "titleColor": "#f2f0f7",
      "labelColor": "#f2f0f7"
    },
    "legend": {
      "labelFont": "sans-serif",
      "titleFont": "sans-serif",
      "titleColor": "white",
      "labelColor": "white"
    },
    "header": {
      "labelFont": "monospace",
      "titleFont": "monospace",
      "titleColor": "#f2f0f7",
      "labelColor": "#f2f0f7"
    },
    "mark": {
      "font": "monospace"
    },
    "title": {
      "font": "monospace",
      "subtitleFont": "monospace",
      "color": "#f2f0f7",
      "anchor": "start",
      "fontWeight": "bold",
      "fontSize": {
        "expr": "20"
      },
      "subtitlePadding": {
        "expr": "10"
      }
    }
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show all",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Select a Continent: "
      }
    }
  ],
  "padding": {
    "left": 20,
    "top": 20,
    "right": 20,
    "bottom": 20
  },
  "width": 900,
  "height": 500,
  "background": "black",
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/kaiyun94/FIT3179-Week9_Homework/main/js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#cce5ee"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/kaiyun94/FIT3179-Week9_Homework/main/js/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "white"
      }
    },
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "#f2f0f7"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "params": [
        {
          "name": "click",
          "select": {
            "type": "point"
          }
        },
        {
          "name": "highlight",
          "select": {
            "type": "point",
            "on": "mouseover"
          }
        }
      ],
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/kaiyun94/FIT3179-Week9_Homework/main/data/Total_death_rate_2019.csv"
            },
            "key": "Country",
            "fields": [
              "Total_Death_Rate",
              "Population",
              "Continent_Region"
            ]
          }
        },
        {
          "filter": "Continent_selection == null || datum.Continent_Region == Continent_selection"
        },
        {
          "calculate": "datum.Total_Death_Rate/datum.Population * 100000",
          "as": "Total death rate per 100k population"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.3,
        "cursor": "pointer"
      },
      "encoding": {
        "color": {
          "field": "Total death rate per 100k population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              100,
              500,
              800,
              2000
            ],
            "range": [
              "#fdbe85",
              "#fd8d3c",
              "#e6550d",
              "#a63603",
              "#612306"
            ]
          },
          "legend": {
            "title": "Total death rate per 100k",
            "orient": "right",
            "offset": 10,
            "labelOffset": 3,
            "titleFontSize": 14,
            "titlePadding": 5
          }
        },
        "opacity": {
          "condition": [
            {
              "param": "highlight",
              "value": 1
            }
          ],
          "value": 0.5
        },
        "stroke": {
          "condition": [
            {
              "param": "highlight",
              "empty": false,
              "value": "white"
            }
          ],
          "value": "#f2f0f7"
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "highlight",
              "empty": false,
              "value": 1.4
            }
          ],
          "value": 0.3
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Total death rate per 100k population",
            "type": "quantitative",
            "format": ".2f",
            "title": "Total death rate per 100,000 people"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 250,
        "dy": -25,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "value": "Malaysia"
        },
        "color": {
          "value": "blue"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 360,
        "dy": 70,
        "fontSize": 14,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "value": "Australia"
        },
        "color": {
          "value": "blue"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -170,
        "dy": -120,
        "fontSize": 14,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "value": "United States"
        },
        "color": {
          "value": "blue"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 290,
        "dy": -95,
        "fontSize": 14,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "value": "China"
        },
        "color": {
          "value": "blue"
        }
      }
    }
  ]
}